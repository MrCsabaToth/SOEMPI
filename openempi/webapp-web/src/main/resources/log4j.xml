    </logger>

    <logger name="org.openhie.openempi">
        <level value="TRACE"/>
    </logger>

    <logger name="org.openempi">
        <level value="TRACE"/>
    </logger>
   -->
    <root>
        <level value="WARN"/>
        <appender-ref ref="FILE"/>
    </root>

</log4j:configuration>
